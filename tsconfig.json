{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "lib": ["ES2015", "dom"],
      "outDir": "./lib/",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strictPropertyInitialization": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": [
        "jasmine", "node"
      ],
      "plugins": [],
      "experimentalDecorators": true
    },
    "include": ["src", "spec"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }