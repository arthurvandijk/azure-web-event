{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "lib": ["es6", "DOM"],
      "outDir": "./lib/",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strictPropertyInitialization": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": [
        "jasmine", "node", "reflect-metadata"
      ],
      "plugins": [],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*", "example", "lib", "lib-esm", "coverage"]
  }